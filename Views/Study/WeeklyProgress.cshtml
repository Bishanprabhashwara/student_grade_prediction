@model Dictionary<DateTime, List<(WebApplication1.Models.StudySession, string)>>

@{ ViewBag.Title = "Weekly Progress"; }

<style>
    .table-container {
        width: 100%;
        margin-top: 20px;
    }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container th, .table-container td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table-container th {
            background-color: #f2f2f2;
        }
</style>

<h2>Weekly Progress</h2>

@foreach (var entry in Model)
{
<h3>@entry.Key.ToString("dddd, MMMM dd, yyyy")</h3>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Subject</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tuple in entry.Value)
                            {
            <tr>
                <td>@tuple.Item1.UserName</td>
                <td>@tuple.Item2</td>
                <td>@tuple.Item1.StartTime.ToString("hh:mm tt")</td>
                <td>@tuple.Item1.EndTime.ToString("hh:mm tt")</td>
            </tr>                }
                        </tbody>
                    </table>
                </div>}
